<?xml version="1.0"?>
<simulation name="The Game of Life" author="team19">
	<grid width="20" height="20"/>
	<neighborhood size="5">
		<edge type="constant" value="alive">
		</edge>
	</neighborhood>
	<states>
		<state value="alive" color="white"></state>
		<state value="dead" color="black"></state>
	</states>
	<init default="dead">
		<cell state="alive" row="10" col="20"></cell>
		<cell state="alive" row="11" col="20"></cell>
	</init>
	<transitions>
		<rule currentState="dead">
			<!-- neighbors start north, clockwise onward -->
			<kv neighbors="alive alive alive alive" 
		        nextState="dead">
			</kv>
			<count neighbors="dead"
				   lowerBound="2"
				   upperBound="3"
				   nextState="dead"> 
			</count>
			<!-- nested [count] means AND, parallel [count] means OR -->
			<match neighborIndex="1"
				   neighbor="dead"
				   nextState="alive">
			</match>
		</rule>
		<rule currentState="alive">
			<!-- more goes here -->
		</rule>
	</transitions>
	<animation framesPerSec="1"></animation>
</simulation>
